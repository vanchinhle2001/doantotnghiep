<div style="margin-left:65px;color: #24262b;font-size:20px;font-weight:500;">
    THÔNG TIN LIÊN HỆ
</div>
<div style="margin-left:65px;color: #24262b;font-size:16px;margin-top:10px;">
    Mọi thắc mắc hoặc góp ý, quý khách vui lòng liên hệ trực tiếp với bộ phận chăm sóc khách hàng của chúng tôi bằng cách điền đầy đủ thông tin vào form bên dưới
</div>

    <div class="container">
        <div class="row">

            <div class="container_contact">
                <!-- Start Contact Details -->
                <!-- Start Contact Details Single Item -->
                <div class="sub_container">
                    <div class="contact-details-single-item">
                        <div class="contact-details-icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="contact-details-content contact-phone">
                            <a href="tel:+0123456789">037991085</a>
                            <a href="tel:+0123456789">038343090</a>
                        </div>
                    </div> <!-- End Contact Details Single Item -->
                    <!-- Start Contact Details Single Item -->
                    <div class="contact-details-single-item">
                        <div class="contact-details-icon">
                            <i class="fa fa-globe"></i>
                        </div>
                        <div class="contact-details-content contact-phone">
                            <a href="mailto:demo@example.com">vanchinhle2001.com</a>
                            <a href="http://www.example.com/">Laptpkamito.com</a>
                        </div>
                    </div> <!-- End Contact Details Single Item -->
                    <!-- Start Contact Details Single Item -->
                    <div class="contact-details-single-item">
                        <div class="contact-details-icon">
                            <i class="fa fa-map-marker"></i>
                        </div>
                        <div class="contact-details-content contact-phone">
                            <span>Your address goes here.</span>
                        </div>
                    </div> <!-- End Contact Details Single Item -->
                    <!-- Start Contact Social Link -->
                    <div class="contact-social">
                        <h4>Follow Us</h4>
                        <ul>
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-youtube"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                            <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div> <!-- End Contact Social Link -->
                </div>
            </div> <!-- End Contact Details -->
            <div class="form_contact">

                @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                {

                    
                    <label class="mb-1">Name <span class="text-danger">*</span></label>
                    <div class="text1">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { type = "text" }, id = "name" })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                    <label class="mb-1">Email<span class="text-danger">*</span></label>
                    <div class="text1">
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { type = "text" }, id = "email" })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                    <label class="mb-1">Số điện thoại<span class="text-danger">*</span></label>
                    <div class="text1">
                        @Html.EditorFor(model => model.phone, new { htmlAttributes = new { type = "text" }, id = "phone" })
                        @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                    </div>
                    <label class="mb-1">Nội dung<span class="text-danger">*</span></label>
                    <div class="text1">
                        @Html.EditorFor(model => model.content, new { htmlAttributes = new { type = "text" }, id = "content" })
                        @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
                    </div>

                    <div class="login_submit">
                        <input class="submit_contactt" style="height:45px;" id="submit_contact" type="submit" value="submit" />
                        @*<button class="btn btn-md btn-black-default-hover mb-4 w-100" style="height:45px;" type="submit">Gửi</button>*@
                    </div>


                }
            </div>
        </div>
       </div>

